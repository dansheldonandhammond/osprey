<div class="t-mt-[50px] 1xl:t-mt-[0px] hero-banner  t-mx-auto lg:t-flex-row t-relative">
  <style>
    .hero-banner {
      height: {{ section.settings.hero_banner_height_mobile_tablet | default: 667 }}px;
    }

    /* >= 1024px (lg) */
    @media (min-width: 1024px) {
      .hero-banner {
        height: {{ section.settings.hero_banner_height_laptop | default: 800 }}px;
      }
    }

    /* >= 1280px (xl) */
    @media (min-width: 1280px) {
      .hero-banner {
        height: {{ section.settings.hero_banner_height_large_laptop | default: 780 }}px;
      }
    }

    /* >= 1920px (2xl) */
    @media (min-width: 1920px) {
      .hero-banner {
        height: {{ section.settings.hero_banner_height_desktop | default: 800 }}px;
      }
    }
  </style>

  <div
    class="
      t-flex t-justify-center t-items-center t-absolute t-z-[10] lg:t-z-[1] t-top-0 t-bottom-0 t-right-0 t-left-0 t-px-[2rem]
      {% case section.settings.content_alignment %}
        {% when 'start' %}
          t-justify-start t-text-left
        {% when 'center' %}
          t-justify-center t-text-center
        {% when 'end' %}
          t-justify-end t-text-right
        {% else %}
          t-justify-center t-text-center
      {% endcase %}
    "
  >
    <div class="t-relative t-flex t-flex-col t-mx-auto t-p-[30px] t-w-full page-width">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <{{ block.settings.heading_block_heading_tag }}
              class="
                                                                                                                                                                                                                                                                                                                                                                                                                                                              t-flex t-text-white t-text-center lg:t-text-start md:t-px-0 heading_block_heading heading_block_text lg:t-leading-[1] {{ block.settings.heading_block_font_weight }} {{ block.settings.heading_block_heading_font }} {{ block.settings.heading_block_heading_case }}
              "
              style="
                  --heading_block_font-size-default: {{ block.settings.heading_block_heading_size_default }};
                  --heading_block_font-size-lg: {{ block.settings.heading_block_heading_size_large }};
                  --heading_block_font-size-xl: {{ block.settings.heading_block_heading_size_extra_large }};
                  --heading_block_top-padding-default: {{ block.settings.heading_block_top_default_padding }}px;
                  --heading_block_bottom-padding-default: {{ block.settings.heading_block_bottom_default_padding }}px;
                  --heading_block_top-padding-lg: {{ block.settings.heading_block_top_large_padding }}px;
                  --heading_block_bottom-padding-lg: {{ block.settings.heading_block_bottom_large_padding }}px;
                  --heading_block_max-width: {{ block.settings.heading_block_max_width }}px;
                  --heading_block_text_color: {% case block.settings.heading_block_text_color %}
                  {% when 'primary' %}var(--primary-colour)
                  {% when 'secondary' %}var(--secondary-colour)
                  {% when 'white' %}white
                  {% when 'black' %}black
                  {% else %}var(--primary-colour)
                {% endcase %};
              "
            >
              {{ block.settings.heading_block_heading_text }}
            </{{ block.settings.heading_block_heading_tag }}>
            <style>
              .heading_block_heading {
                max-width: var(--heading_block_max-width) !important;
                padding-top: var(--heading_block_top-padding-default) !important;
                padding-bottom: var(--heading_block_bottom-padding-default) !important;
                font-size: var(--heading_block_font-size-default) !important;
              }

              @media (min-width: 1024px) {
                .heading_block_heading {
                  color: var(--heading_block_text_color) !important;
                }
              }

              @media (min-width: 1024px) {
                .heading_block_heading {
                  padding-top: var(--heading_block_top-padding-lg) !important;
                  padding-bottom: var(--heading_block_bottom-padding-lg) !important;
                  font-size: var(--heading_block_font-size-lg) !important;
                }
              }

              @media (min-width: 1440px) {
                .heading_block_heading {
                  font-size: var(--heading_block_font-size-xl) !important;
                }
              }
            </style>
          {%- when 'text' -%}
            <p
              class="t-flex t-text-white lg:t-text-black t-text-center lg:t-text-start text_block_text lg:t-leading-[1.5] {{ block.settings.text_block_font_weight }} {{ block.settings.text_block_text_case }}"
              style="
                --text_block_font-size-default: {{ block.settings.text_block_text_size_default }};
                --text_block_font-size-lg: {{ block.settings.text_block_text_size_large }};
                --text_block_font-size-xl: {{ block.settings.text_block_text_size_extra_large }};
                --text_block_top-padding-default: {{ block.settings.text_block_top_default_padding }}px;
                --text_block_bottom-padding-default: {{ block.settings.text_block_bottom_default_padding }}px;
                --text_block_top-padding-lg: {{ block.settings.text_block_top_large_padding }}px;
                --text_block_bottom-padding-lg: {{ block.settings.text_block_bottom_large_padding }}px;
                --text_block_max-width: {{ block.settings.text_block_max_width }}px;
              "
            >
              {{ block.settings.text_block_text }}
            </p>
            <style>
              .text_block_text {
                max-width: var(--text_block_max-width) !important;
                padding-top: var(--text_block_top-padding-default) !important;
                padding-bottom: var(--text_block_bottom-padding-default) !important;
                font-size: var(--text_block_font-size-default) !important;
                {% comment %} color: var(--text_block_text_color) !important; {% endcomment %}
              }

              @media (min-width: 1024px) {
                .text_block_text {
                  padding-top: var(--text_block_top-padding-lg) !important;
                  padding-bottom: var(--text_block_bottom-padding-lg) !important;
                  font-size: var(--text_block_font-size-lg) !important;
                }
              }

              @media (min-width: 1440px) {
                .text_block_text {
                  font-size: var(--text_block_font-size-xl) !important;
                }
              }
            </style>
          {%- when 'custom_liquid' -%}
            <div class=" t-text-white lg:t-text-black t-text-center lg:t-text-start text_block_text lg:t-leading-[1.5] t-font-normal font-secondary t-normalcase">
              {{ block.settings.custom_liquid_code }}
            </div>
          {%- when 'image' -%}
            <div class="t-py-[10px] t-max-w-[300px] t-w-full">
              <img
                src="{{ block.settings.image_url }}"
                alt="{{ block.settings.image_alt_text }}"
                class="t-w-full t-h-auto"
              >
            </div>
          {%- when 'buttons' -%}
            <div class="t-flex t-mx-auto lg:t-ml-0 t-text-center lg-t-text-start ">
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  href="{{ block.settings.button_link_1 }}"
                  class="t-mx-auto t-w-fit t-px-[28px] t-pt-[18px] t-pb-[17px] font-secondary t-font-bold lg:t-text-body-ms button md:t-bottom-0{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                  {% if block.settings.text_block_hover_colour %}
                    data-hover-colour="{{ block.settings.text_block_hover_colour }}"
                  {% endif %}
                >
                  {{- block.settings.button_label_1 | escape -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>

  <div class="t-h-full t-flex-col t-items-center t-relative">
    <!-- Video Block -->

    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'image_picker' -%}
          {% if block.settings.image_url %}
            <img
              alt="{{ block.settings.heading }}"
              src="{{ block.settings.image_url | image_url }}"
              class="t-hidden lg:t-flex t-absolute t-top-[20px] t-right-[20px] t-ms-[30px] t-w-[100px] lg:t-w-[200px] "
            >
          {% endif %}
      {%- endcase -%}
    {%- endfor -%}

    {% if section.settings.video_url != blank %}
      <div class="t-w-full t-h-full t-block">
        <video
          id="dynamic_video"
          class="t-h-full t-w-full t-object-cover t-object-center"
          preload="auto"
          loop
          muted
          playsinline
          autoplay
          src="{{ section.settings.video_url }}"
        ></video>
      </div>
    {% else %}
      {%- if section.settings.mobile != blank
        and section.settings.laptop != blank
        and section.settings.desktop != blank
      -%}
        <!-- All three images are provided -->
        <div class="t-w-full t-h-full t-block md:t-hidden {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.mobile
            | image_url: width: 3840
            | image_tag:
              width: section.settings.mobile.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
        <div class="t-w-full t-h-full t-hidden md:t-block lg:t-hidden {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.laptop
            | image_url: width: 3840
            | image_tag:
              width: section.settings.laptop.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
        <div class="t-w-full t-h-full t-hidden lg:t-block {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.desktop
            | image_url: width: 3840
            | image_tag:
              width: section.settings.desktop.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center '
          }}
        </div>
      {%- elsif section.settings.laptop != blank and section.settings.desktop != blank -%}
        <!-- Only desktop and laptop images are provided -->
        <div class="t-w-full t-h-full t-block lg:t-hidden {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.laptop
            | image_url: width: 3840
            | image_tag:
              width: section.settings.laptop.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
        <div class="t-w-full t-h-full t-hidden lg:t-block {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
