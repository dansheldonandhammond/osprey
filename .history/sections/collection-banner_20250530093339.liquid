        </div>
      {%- elsif section.settings.mobile != blank and section.settings.laptop != blank -%}
        <!-- Only laptop and mobile images are provided -->
        <div class="t-w-full t-h-full t-block md:t-hidden {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.mobile
            | image_url: width: 3840
            | image_tag:
              width: section.settings.mobile.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
        <div class="t-w-full t-h-full t-hidden md:t-block {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.laptop
            | image_url: width: 3840
            | image_tag:
              width: section.settings.laptop.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
      {%- elsif section.settings.mobile != blank -%}
        <!-- Only mobile image is provided -->
        <div class="t-w-full t-h-full t-block {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.mobile
            | image_url: width: 3840
            | image_tag:
              width: section.settings.mobile.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
      {%- elsif section.settings.laptop != blank -%}
        <!-- Only laptop image is provided -->
        <div class="t-w-full t-h-full t-block {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.laptop
            | image_url: width: 3840
            | image_tag:
              width: section.settings.laptop.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
      {%- elsif section.settings.desktop != blank -%}
        <!-- Only desktop image is provided -->
        {% assign image_style = 'object-position: '
          | append: section.settings.desktop_image_horizontal_axis
          | append: '% '
          | append: section.settings.desktop_image_vertical_axis
          | append: '%; scale: '
          | append: section.settings.image_scale
          | append: '%;'
        %}

        <div class="t-w-full t-h-full t-block t-overflow-hidden {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.desktop
            | image_url: width: 3840
            | image_tag:
              width: section.settings.desktop.width,
              class: 't-w-full lg:t-h-full t-object-cover t-h-full',
              style: image_style
          }}
        </div>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>

