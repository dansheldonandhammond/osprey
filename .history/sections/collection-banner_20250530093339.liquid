        <!-- Only desktop and mobile images are provided -->
        <div class="t-w-full t-h-full t-block lg:t-hidden {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.mobile
            | image_url: width: 3840
            | image_tag:
              width: section.settings.mobile.width,
              class: 't-w-full t-h-full t-object-cover t-h-full t-object-center'
          }}
        </div>
        <div class="t-w-full t-h-full t-hidden lg:t-block {% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
