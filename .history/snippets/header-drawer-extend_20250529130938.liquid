{% comment %}
  Renders a header drawer menu for mobile and desktop.
{% endcomment %}

<header-drawer class="t-flex t-gap-x-[3.7rem] t-h-full ">
  <a href="{{ routes.root_url }}" class="t-h-full t-mx-auto t-my-auto t-flex t-items-center">
    {%- if settings.logo != blank -%}
      <img
        src="https://www.osprey.com/gb/media/logo/websites/40/osprey_logo_1.svg"
        alt="Logo"
        class="c-header__logo parent-menu-item"
      >

    {%- else -%}
      <span class="h2">{{ shop.name }}</span>
    {%- endif -%}
  </a>
  <style>
    .c-header__logo {
      content: url('data:image/svg+xml;base64,');
      max-width: 72px !important;
      width: 110px !important;
      height: auto !important;
      position: relative;
    }
  </style>
  <!-- ─── Top Horizontal Menu ─────────────────────────────────────────────── -->
  <nav class="main-navigation t-flex">
    <ul
      class="t-ps-[16px] parent-menu t-flex t-gap-[3.2rem] t-items-center t-list-none t-uppercase t-h-full t-w-full t-justify-between"
      style="margin-block-end: 0px; margin-block-start: 0px;"
    >
      {%- for link in section.settings.menu.links -%}
        <li class="t-relative t-h-full t-flex t-items-center">
          {%- if link.links.size > 0 -%}
            <a
              class="t-text-white t-no-underline t-font-[700] t-h-full t-flex t-items-center t-text-body-6 js-parent-item t-cursor-pointer parent-menu-item "
              data-target="panel-{{ forloop.index0 }}"
              tabindex="0"
            >
              {{ link.title | escape }}
            </a>
          {%- else -%}
            <a
              href="{{ link.url }}"
              class="t-text-white t-no-underline t-font-[700] t-h-full t-flex t-items-center t-text-body-6 parent-menu-item"
            >
              {{ link.title | escape }}
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </nav>

  <style>
    .main-navigation ul li,
    .main-navigation .header__icon {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .main-navigation ul li::after,
    .main-navigation .header__icon::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      height: 4px;
      background-color: white;
      opacity: 0;
      transition: opacity 0.2s ease-in-out;
      width: 100%; /* Default to full width of li */
      max-width: 100%; /* Limit underline width to the width of the li */
    }

    .main-navigation ul li:hover::after,
    .main-navigation .header__icon:hover::after {
      opacity: 1;
    }
  </style>

  <!-- ─── Drawer Container ────────────────────────────────────────────────── -->

  <!-- Overlay -->
  <div
    id="menu-drawer"
    class="
                                                                                                                                                                                              t-hidden xl:t-flex t-fixed t-left-[-100%] t-w-[1334px] t-h-screen t-bg-white t-shadow-lg t-justify-end t-z-[-1] t-transition-left t-duration-500 t-ease-in-out
    "
  >
    <!-- Left Pane (children) -->
    <div
      id="left-pane"
      class="t-w-full t-max-w-[660px] t-p-4 t-border-r t-border-gray-300 t-overflow-y-auto t-bg-white  t-flex t-justify-end"
    >
      {%- for link in section.settings.menu.links -%}
        <div
          id="panel-{{ forloop.index0 }}"
          class="child-panel t-max-w-[600px] t-text-start t-hidden t-opacity-0 t--translate-x-10 t-transition-all t-duration-300 t-ease-in-out"
        >
          <ul class="t-list-none t-p-0 t-m-0 t-flex t-gap-[20xp] t-flex-col t-mt-[40px] ">
            {%- for childlink in link.links -%}
              <li class="">
                {%- if childlink.links.size > 0 -%}
                  <a
                    class="t-cursor-pointer js-child-item t-w-[341px] t-appearance-none t-bg-transparent t-border-0 t-outline-none t-block t-text-left t-p-2 t-text-gray-800 t-text-body-4 t-font-[600] t-no-underline t-flex t-items-center t-justify-between"
                    data-target="subpanel-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}"
                  >
                    <span>{{ childlink.title | escape }}</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 13 22"
                      fill="none"
                      class="h-4.5 w-4.5 -mt-0.5 lg:h-5.5 lg:w-5.5 lg:mt-0 duration-100 ease-in transition-button"
                      role="img"
                    >
                      <path d="M1 1L11 11L1 21" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                      <title>chevron-right-xl</title>
                    </svg>
                  </a>

                {%- else -%}
                  <a
                    href="{{ childlink.url }}"
                    class="t-no-underline t-w-[341px] t-appearance-none t-bg-transparent t-border-0 t-outline-none t-block t-text-left t-p-2 t-text-gray-800 t-text-body-4 t-font-[600]"
                  >
                    {{ childlink.title | escape }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endfor -%}
    </div>

    <!-- Right Pane (grand-children) -->
    <div
      id="right-pane"
      class="
        t-w-full t-max-w-[336px] t-relative t-overflow-hidden
        t-transition-transform t-duration-300 t-ease-in-out t-bg-transparent
      "
      style="transform: translateX(0); opacity:0;"
    >
      <!-- default placeholder -->
      <div id="default-grandchild-content" class="t-text-black">
        <div class="t-relative t-w-full t-h-full t-min-h-screen">
          <img
            src="https://www.osprey.com/gb/media/wysiwyg/Backpacks_MM_desk.jpg"
            alt="Backpacks"
            class="t-absolute t-inset-0 t-w-full t-h-full t-object-cover "
          >
          <div class="t-absolute t-left-0 t-right-0 t-bottom-0 t-flex t-items-center t-justify-center t-h-1/4">
            <a
              class="t-bg-transparent t-text-white t-py-3.5 lg:t-py-4 t-w-fit dr:t-bg-transparent os:t-btn-outline os:t-uppercase t-text-body-5 t-px-8 t-rounded t-uppercase t-font-bold t-tracking-wide t-shadow-lg t-no-underline"
              style="border:solid 3px #000;"
            >
              Shop All
            </a>
          </div>
        </div>
      </div>

      {%- for link in section.settings.menu.links -%}
        {%- for childlink in link.links -%}
          <div
            id="subpanel-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}"
            class="grandchild-panel t-absolute t-bg-[#F7F8F9] t-transition-all t-duration-300 t-ease-in-out t-hidden"
            style="
              transform: translateX(-100%);
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              opacity: 0;
            "
          >
            <ul>
              {%- for grandchildlink in childlink.links -%}
                <li>
                  <a
                    href="{{ grandchildlink.url }}"
                    class="t-block t-p-2 t-text-gray-800 hover:t-bg-gray-100 t-font-[600] t-text-[1.8rem] "
                  >
                    {{ grandchildlink.title | escape -}}
                  </a>
                </li>
              {%- endfor -%}
              <li class="t-mt-[20px]">
                <a
                  href="/collections/all"
                  class="t-cursor-pointer t-bg-transparent t-text-black t-py-3.5 lg:t-py-4 t-w-fit dr:t-bg-transparent os:t-btn-outline os:t-uppercase t-text-body-5 t-px-8 t-rounded t-uppercase t-font-bold t-tracking-wide t-shadow-lg"
                  style="border:solid 3px #000;"
                >
                  Shop All
                </a>
              </li>
            </ul>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    <!-- Close Drawer -->
    <button
      id="close-drawer"
      class="t-absolute t-top-4 t-right-4 t-bg-transparent t-border-0 t-text-black t-text-3xl t-cursor-pointer"
      aria-label="Close menu"
    >
      &times;
    </button>
  </div>
</header-drawer>

<!-- ─── JS behaviour ──────────────────────────────────────────────────────── -->

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const rightPane = document.getElementById('right-pane');
    const drawer = document.getElementById('menu-drawer');
    const defaultPane = document.getElementById('default-grandchild-content');
    const grandPanels = document.querySelectorAll('.grandchild-panel');
    const parentBtns = document.querySelectorAll('.js-parent-item');
    const childBtns = document.querySelectorAll('.js-child-item');

    let currentGrand = null;

    function showGrand(id) {
      const panel = document.getElementById(id);
      if (!panel) return;

      // Hide current grandchild panel if any
      if (currentGrand && currentGrand !== panel) {
        currentGrand.classList.remove('active');
        currentGrand.classList.add('t-hidden');
        currentGrand.style.display = 'none';
        // Reset inline styles
        currentGrand.style.transform = '';
        currentGrand.style.opacity = '';
      }

      // Show selected grandchild panel
      defaultPane.style.display = 'none';
      panel.classList.remove('t-hidden');
      panel.style.display = 'block';
      // Reset inline styles before animating in
      panel.style.transform = '';
      panel.style.opacity = '';
      setTimeout(() => {
        panel.classList.add('active');
      }, 10);

      currentGrand = panel;
    }

    parentBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        // Hide all child panels
        document.querySelectorAll('.child-panel').forEach((p) => {
          p.classList.add('t-hidden', 't-opacity-0');
          p.style.transform = 'translateX(-2.5rem)'; // -10 in Tailwind = -2.5rem
        });

        // Show correct child panel
        const target = document.getElementById(btn.dataset.target);
        if (target) {
          target.classList.remove('t-hidden', 't-opacity-0');
          target.style.transform = 'translateX(0)';
        }

        // Slide right pane back to original position
        rightPane.style.transition = 'transform 0.3s ease-in-out';
        rightPane.style.transform = 'translateX(0)';

        // Reset grandchild panels and default placeholder
        grandPanels.forEach((p) => {
          p.classList.remove('active');
          p.classList.add('t-hidden');
          p.style.display = 'none';
          p.style.transform = '';
          p.style.opacity = '';
        });

        defaultPane.style.display = 'block';
        currentGrand = null;

        // Open drawer
        drawer.classList.remove('t-left-[-100%]');
        drawer.classList.add('t-left-0');
      });
    });

    childBtns.forEach((btn) => {
      btn.addEventListener('click', () => showGrand(btn.dataset.target));
    });

    const closeBtn = document.getElementById('close-drawer');
    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        drawer.classList.add('t-left-[-100%]');
        drawer.classList.remove('t-left-0');
        rightPane.style.transition = 'transform 0.3s ease-in-out';
        rightPane.style.transform = 'translateX(0)';

        grandPanels.forEach((p) => {
          p.style.display = 'none';
          p.style.transform = 'translateX(-100%)';
          p.style.opacity = '0';
        });

        defaultPane.style.display = 'block';
        currentGrand = null;
      });
    }
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const drawer = document.getElementById('menu-drawer');
    const parentBtns = document.querySelectorAll('.js-parent-item');
    const closeBtn = document.getElementById('close-drawer');

    function preventScroll(enable) {
      if (enable) {
        document.body.style.overflow = 'hidden';
      } else {
        document.body.style.overflow = '';
      }
    }

    // Observe drawer open/close to toggle scroll lock
    const observer = new MutationObserver(() => {
      if (drawer.classList.contains('t-left-0')) {
        preventScroll(true);
      } else {
        preventScroll(false);
      }
    });
    observer.observe(drawer, { attributes: true, attributeFilter: ['class'] });
  });
</script>

<script>
  window.addEventListener('load', () => {
    function updateDrawerPosition() {
      // select the outer header container that wraps both announcement + nav
      const header = document.querySelector('.header-wrapper');
      const drawer = document.getElementById('menu-drawer');
      if (!header || !drawer) return;

      // distance from top of document + total header height
      const offsetTop = header.offsetTop + header.offsetHeight;

      drawer.style.top = `${offsetTop}px`;
    }

    // run once, then on scroll/resize
    updateDrawerPosition();
    window.addEventListener('scroll', updateDrawerPosition);
    window.addEventListener('resize', updateDrawerPosition);
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const drawer = document.getElementById('menu-drawer');
    const overlay = document.getElementById('menu-drawer-overlay');

    function updateOverlay() {
      if (drawer.classList.contains('t-left-0')) {
        overlay.style.display = 'block';
        setTimeout(() => {
          overlay.classList.remove('t-opacity-0', 't-pointer-events-none');
        }, 10);
      } else {
        overlay.classList.add('t-opacity-0', 't-pointer-events-none');
        setTimeout(() => {
          overlay.style.display = 'none';
        }, 500);
      }
    }

    // Observe drawer open/close to toggle overlay
    const observer = new MutationObserver(updateOverlay);
    observer.observe(drawer, { attributes: true, attributeFilter: ['class'] });

    // Also close drawer if overlay is clicked
    overlay.addEventListener('click', () => {
      drawer.classList.add('t-left-[-100%]');
      drawer.classList.remove('t-left-0');
    });
  });
</script>

<!-- ─── Only minimal CSS for pointer-events on active grandchild ──────────── -->
<style>
  .grandchild-panel.t-translate-x-0 {
    pointer-events: auto;
  } /* clickable only when shown */

  .grandchild-panel {
    opacity: 0;
    transform: translateX(-300px);
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }
  .grandchild-panel.active {
    opacity: 1;
    transform: translateX(0);
    pointer-events: auto;
    z-index: 2;
  }
</style>
