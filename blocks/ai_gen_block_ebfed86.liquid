{% doc %}
  @prompt
    create a block which contains products the image and the title and a link to the product page enable slots for 2 items, add shop now buttons on them
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    transition: opacity 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
    opacity: 0.9;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_radius }}px;
    position: relative;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-info-{{ ai_gen_id }} {
    margin-top: {{ block.settings.text_spacing }}px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0;
    color: {{ block.settings.title_color }};
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    margin-top: 8px;
    color: {{ block.settings.price_color }};
  }

  .ai-product-button-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: {{ block.settings.button_spacing }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .ai-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..2) %}
    {% liquid
      assign product_key = 'product_' | append: i
      assign product = block.settings[product_key]
    %}

    {% if product != blank %}
      <div class="ai-product-card-{{ ai_gen_id }}">
        <a href="{{ product.url }}" class="ai-product-image-wrapper-{{ ai_gen_id }}">
          {% if product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 800 }}"
              alt="{{ product.featured_image.alt | escape }}"
              width="{{ product.featured_image.width }}"
              height="{{ product.featured_image.height }}"
              loading="lazy"
              class="ai-product-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </a>
        <div class="ai-product-info-{{ ai_gen_id }}">
          <a href="{{ product.url }}" style="text-decoration: none; color: inherit;">
            <h3 class="ai-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
          </a>
          <div class="ai-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
          <a href="{{ product.url }}" class="ai-product-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      </div>
    {% else %}
      <div class="ai-product-card-{{ ai_gen_id }}">
        <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
          <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
            <div class="ai-product-empty-state-{{ ai_gen_id }}">
              Next, add product {{ i }}
            </div>
          </div>
        </div>
        <div class="ai-product-info-{{ ai_gen_id }}">
          <h3 class="ai-product-title-{{ ai_gen_id }}">Product title</h3>
          <div class="ai-product-price-{{ ai_gen_id }}">$0.00</div>
          <span class="ai-product-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </span>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

