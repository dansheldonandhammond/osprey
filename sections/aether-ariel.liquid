{% comment %}
  Shopify Section with Three Block Types:
  - Three Column Layout
  - Two Column Text and Image
  - Parallax Hero
{% endcomment %}

<div class="custom-layout-section">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'three_column' %}
        {% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

        {% style %}
          .ai-three-column-container-{{ ai_gen_id }} {
            max-width: 1300px;
            margin: 0 auto;
            padding: 30px 20px;
            display: flex;
            gap: 30px;
            flex-direction: column;
          }

          .ai-three-column-text-{{ ai_gen_id }} {
            width: 100%;
          }

          .ai-three-column-heading-{{ ai_gen_id }} {
            font-size: {{ block.settings.heading_size }}px;
            text-transform: uppercase;
            margin: 0;
            color: {{ block.settings.heading_color }};
            font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
            font-weight: {{ block.settings.heading_font_weight }};
            line-height: 1.1;
            margin-bottom: {{ block.settings.heading_spacing }}px;
          }

          .ai-three-column-text-content-{{ ai_gen_id }} {
            color: {{ block.settings.text_color }};
            font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
            font-size: {{ block.settings.text_size }}px;
            line-height: 1.5;
          }

          .ai-three-column-text-content-{{ ai_gen_id }} p {
            margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
          }

          .ai-three-column-text-content-{{ ai_gen_id }} p:last-child {
            margin-bottom: 0;
          }

          .ai-three-column-images-{{ ai_gen_id }} {
            display: none;
            flex-direction: column;
            gap: 30px;
          }

          .ai-three-column-image-wrapper-{{ ai_gen_id }} {
            width: 100%;
            height: 400px;
            aspect-ratio: 1;
            overflow: hidden;
            border-radius: {{ block.settings.image_border_radius }}px;
          }

          .ai-three-column-image-{{ ai_gen_id }} {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
          }

          .ai-three-column-image-placeholder-{{ ai_gen_id }} {
            width: 100%;
            height: 100%;
            background-color: #f4f4f4;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
          }

          .ai-three-column-image-placeholder-{{ ai_gen_id }} svg {
            width: 60%;
            height: 60%;
            opacity: 0.3;
          }

          .ai-three-column-empty-state-{{ ai_gen_id }} {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 8px 16px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 4px;
            font-size: 12px;
            color: #666;
            text-align: center;
            pointer-events: none;
          }

          @media screen and (min-width: 768px) {
            .ai-three-column-container-{{ ai_gen_id }} {
              flex-direction: row;
              align-items: flex-start;
            }

            .ai-three-column-text-{{ ai_gen_id }} {
              width: calc(33.333% - 20px);
              flex-shrink: 0;
            }

            .ai-three-column-images-{{ ai_gen_id }} {
              display: flex;
              width: calc(66.666% - 10px);
              flex-direction: row;
              gap: 30px;
            }

            .ai-three-column-image-wrapper-{{ ai_gen_id }} {
              width: calc(50% - 15px);
            }
          }

          @media screen and (max-width: 767px) {
            .ai-three-column-container-{{ ai_gen_id }} {
              padding: 20px 15px;
              gap: 20px;
            }

            .ai-three-column-heading-{{ ai_gen_id }} {
              font-size: {{ block.settings.heading_size | times: 0.7 }}px;
            }
          }

          @media screen and (min-width: 768px) and (max-width: 1023px) {
            .ai-three-column-images-{{ ai_gen_id }} {
              gap: 20px;
            }

            .ai-three-column-image-wrapper-{{ ai_gen_id }} {
              height: 350px;
            }
          }
        {% endstyle %}

        <div class="ai-three-column-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
          <div class="ai-three-column-text-{{ ai_gen_id }}">
            {% if block.settings.heading != blank %}
              <h2 class="ai-three-column-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
            {% endif %}

            {% if block.settings.text_content != blank %}
              <div class="ai-three-column-text-content-{{ ai_gen_id }}">
                {{ block.settings.text_content }}
              </div>
            {% endif %}
          </div>

          <div class="ai-three-column-images-{{ ai_gen_id }}">
            <div class="ai-three-column-image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.image_1 %}
                <img
                  src="{{ block.settings.image_1 | image_url: width: 600 }}"
                  alt="{{ block.settings.image_1.alt | escape }}"
                  class="ai-three-column-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ block.settings.image_1.width }}"
                  height="{{ block.settings.image_1.height }}"
                >
              {% else %}
                <div class="ai-three-column-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                  <div class="ai-three-column-empty-state-{{ ai_gen_id }}">Add first image</div>
                </div>
              {% endif %}
            </div>

            <div class="ai-three-column-image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.image_2 %}
                <img
                  src="{{ block.settings.image_2 | image_url: width: 600 }}"
                  alt="{{ block.settings.image_2.alt | escape }}"
                  class="ai-three-column-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ block.settings.image_2.width }}"
                  height="{{ block.settings.image_2.height }}"
                >
              {% else %}
                <div class="ai-three-column-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                  <div class="ai-three-column-empty-state-{{ ai_gen_id }}">Add second image</div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>

      {% when 'two_column' %}
        {% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

        {% style %}
          .ai-two-column-{{ ai_gen_id }} {
            max-width: 1300px;
            margin: 0 auto;
            padding: 30px 0;
            display: flex;
            gap: 30px;
            flex-direction: column;
          }

          @media (min-width: 768px) {
            .ai-two-column-{{ ai_gen_id }} {
              flex-direction: row;
            }

            .ai-two-column-{{ ai_gen_id }}.ai-two-column-reverse-{{ ai_gen_id }} {
              flex-direction: row-reverse;
            }
          }

          .ai-two-column-text-{{ ai_gen_id }} {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            padding-left: 15px;
            padding-right: 15px;
            order: 2;
          }

          @media (min-width: 768px) {
            .ai-two-column-text-{{ ai_gen_id }} {
              width: 50%;
              padding-left: 70px;
              padding-right: 15px;
              order: 0;
            }
          }

          .ai-two-column-heading-{{ ai_gen_id }} {
            font-size: 28px;
            text-transform: uppercase;
            margin: 0;
            color: {{ block.settings.heading_color }};
            font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
            font-weight: {{ block.settings.heading_font_weight }};
            font-style: {{ settings.type_header_font.style }};
            margin-top: {{ block.settings.heading_margin_top }}px;
            margin-bottom: {{ block.settings.heading_margin_bottom }}px;
            margin-left: {{ block.settings.heading_margin_left }}px;
            margin-right: {{ block.settings.heading_margin_right }}px;
          }

          .ai-two-column-text-content-{{ ai_gen_id }} {
            color: {{ block.settings.text_color }};
            font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
            font-weight: {{ settings.type_body_font.weight }};
            font-style: {{ settings.type_body_font.style }};
            line-height: 1.6;
            margin: 0;
            margin-top: {{ block.settings.text_margin_top }}px;
            margin-bottom: {{ block.settings.text_margin_bottom }}px;
            margin-left: {{ block.settings.text_margin_left }}px;
            margin-right: {{ block.settings.text_margin_right }}px;
          }

          .ai-two-column-image-{{ ai_gen_id }} {
            width: 100%;
            height: 400px;
            aspect-ratio: 1;
            object-fit: cover;
            order: 1;
          }

          @media (min-width: 768px) {
            .ai-two-column-image-{{ ai_gen_id }} {
              width: 50%;
              order: 0;
            }
          }

          .ai-two-column-image-wrapper-{{ ai_gen_id }} {
            width: 100%;
            height: 400px;
            aspect-ratio: 1;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f4f4f4;
            order: 1;
          }

          @media (min-width: 768px) {
            .ai-two-column-image-wrapper-{{ ai_gen_id }} {
              width: 50%;
              order: 0;
            }
          }

          .ai-two-column-image-wrapper-{{ ai_gen_id }} svg {
            width: 100%;
            height: 100%;
            max-width: 200px;
            max-height: 200px;
            opacity: 0.3;
          }

          .ai-two-column-empty-state-{{ ai_gen_id }} {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 14px;
            color: #666;
            text-align: center;
            pointer-events: none;
          }
        {% endstyle %}

        <div
          class="ai-two-column-{{ ai_gen_id }} {% if block.settings.reverse_layout %}ai-two-column-reverse-{{ ai_gen_id }}{% endif %}"
          {{ block.shopify_attributes }}
        >
          <div class="ai-two-column-text-{{ ai_gen_id }}">
            {% if block.settings.heading != blank %}
              <h2 class="ai-two-column-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="ai-two-column-text-content-{{ ai_gen_id }}">{{ block.settings.text }}</div>
            {% endif %}
          </div>

          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-two-column-empty-state-{{ ai_gen_id }}">Add an image to complete this section</div>
            </div>
          {% endif %}
        </div>

      {% when 'parallax' %}
        {% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

        {% style %}
          .ai-parallax-container-{{ ai_gen_id }} {
            position: relative;
            height: {{ block.settings.viewport_height }}vh;
            background-attachment: fixed;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: {{ block.settings.bg_position_mobile }};
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
          }

          @media (min-width: 1024px) {
            .ai-parallax-container-{{ ai_gen_id }} {
              background-position: {{ block.settings.bg_position_desktop }};
            }
          }

          .ai-parallax-overlay-{{ ai_gen_id }} {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
            z-index: 1;
          }

          .ai-parallax-content-{{ ai_gen_id }} {
            position: relative;
            z-index: 2;
            text-align: center;
            padding: 20px;
            max-width: 100%;
          }

          .ai-parallax-heading-{{ ai_gen_id }} {
            color: {{ block.settings.text_color }};
            text-transform: uppercase;
            font-size: {{ block.settings.text_size_mobile }}px;
            margin: 0;
            line-height: 1.2;
            font-weight: {{ block.settings.font_weight }};
            letter-spacing: {{ block.settings.letter_spacing }}px;
          }

          @media (min-width: 768px) {
            .ai-parallax-heading-{{ ai_gen_id }} {
              font-size: {{ block.settings.text_size_desktop }}px;
            }
          }

          .ai-parallax-placeholder-{{ ai_gen_id }} {
            background-color: #f4f4f4;
            width: 100%;
            height: {{ block.settings.viewport_height }}vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
          }

          .ai-parallax-placeholder-{{ ai_gen_id }} svg {
            width: 100%;
            height: 100%;
            max-width: 500px;
            max-height: 500px;
            opacity: 0.3;
          }

          .ai-parallax-empty-state-{{ ai_gen_id }} {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 12px 20px;
            font-size: 14px;
            color: #666;
            text-align: center;
            pointer-events: none;
          }

          @media (max-width: 767px) {
            .ai-parallax-container-{{ ai_gen_id }} {
              background-attachment: scroll;
            }
          }

          @supports not (background-attachment: fixed) {
            .ai-parallax-container-{{ ai_gen_id }} {
              background-attachment: scroll;
            }
          }
        {% endstyle %}

        <div
          class="ai-parallax-container-{{ ai_gen_id }}"
          {% if block.settings.background_image %}
            style="background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');"
          {% endif %}
          {{ block.shopify_attributes }}
        >
          {% if block.settings.background_image %}
            <div class="ai-parallax-overlay-{{ ai_gen_id }}"></div>
            <div class="ai-parallax-content-{{ ai_gen_id }}">
              {% if block.settings.heading != blank %}
                <h2 class="ai-parallax-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
              {% endif %}
            </div>
          {% else %}
            <div class="ai-parallax-placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
              <div class="ai-parallax-empty-state-{{ ai_gen_id }}">Next, add a background image</div>
            </div>
          {% endif %}
        </div>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom Layout",
  "settings": [],
  "blocks": [
    {
      "type": "three_column",
      "name": "Three column layout",
      "settings": [
        {
          "type": "header",
          "content": "Text content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your heading here"
        },
        {
          "type": "richtext",
          "id": "text_content",
          "label": "Text content",
          "default": "<p>Add your first paragraph of content here. This text will appear in the left column alongside your heading.</p><p>Add a second paragraph if needed. The text will stack vertically on mobile and remain in the left column on desktop.</p>"
        },
        {
          "type": "header",
          "content": "Images"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "First image"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Second image"
        },
        {
          "type": "header",
          "content": "Typography"
        },
        {
          "type": "range",
          "id": "heading_size",
          "min": 24,
          "max": 80,
          "step": 2,
          "unit": "px",
          "label": "Heading size",
          "default": 60
        },
        {
          "type": "select",
          "id": "heading_font_weight",
          "label": "Heading font weight",
          "options": [
            {
              "value": "300",
              "label": "Light"
            },
            {
              "value": "400",
              "label": "Normal"
            },
            {
              "value": "500",
              "label": "Medium"
            },
            {
              "value": "600",
              "label": "Semi bold"
            },
            {
              "value": "700",
              "label": "Bold"
            },
            {
              "value": "800",
              "label": "Extra bold"
            }
          ],
          "default": "700"
        },
        {
          "type": "range",
          "id": "text_size",
          "min": 12,
          "max": 24,
          "step": 1,
          "unit": "px",
          "label": "Text size",
          "default": 16
        },
        {
          "type": "range",
          "id": "heading_spacing",
          "min": 0,
          "max": 40,
          "step": 2,
          "unit": "px",
          "label": "Heading bottom spacing",
          "default": 20
        },
        {
          "type": "range",
          "id": "paragraph_spacing",
          "min": 0,
          "max": 40,
          "step": 2,
          "unit": "px",
          "label": "Paragraph spacing",
          "default": 16
        },
        {
          "type": "header",
          "content": "Style"
        },
        {
          "type": "range",
          "id": "image_border_radius",
          "min": 0,
          "max": 40,
          "step": 2,
          "unit": "px",
          "label": "Image border radius",
          "default": 0
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#000000"
        }
      ]
    },
    {
      "type": "two_column",
      "name": "Two column text and image",
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your heading here"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Layout"
        },
        {
          "type": "checkbox",
          "id": "reverse_layout",
          "label": "Reverse column order on desktop",
          "default": false
        },
        {
          "type": "header",
          "content": "Typography"
        },
        {
          "type": "select",
          "id": "heading_font_weight",
          "label": "Heading font weight",
          "options": [
            {
              "value": "300",
              "label": "Light"
            },
            {
              "value": "400",
              "label": "Normal"
            },
            {
              "value": "500",
              "label": "Medium"
            },
            {
              "value": "600",
              "label": "Semi bold"
            },
            {
              "value": "700",
              "label": "Bold"
            },
            {
              "value": "800",
              "label": "Extra bold"
            }
          ],
          "default": "700"
        },
        {
          "type": "header",
          "content": "Heading margin"
        },
        {
          "type": "range",
          "id": "heading_margin_top",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Top",
          "default": 0
        },
        {
          "type": "range",
          "id": "heading_margin_bottom",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Bottom",
          "default": 20
        },
        {
          "type": "range",
          "id": "heading_margin_left",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Left",
          "default": 0
        },
        {
          "type": "range",
          "id": "heading_margin_right",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Right",
          "default": 0
        },
        {
          "type": "header",
          "content": "Text margin"
        },
        {
          "type": "range",
          "id": "text_margin_top",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Top",
          "default": 0
        },
        {
          "type": "range",
          "id": "text_margin_bottom",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Bottom",
          "default": 0
        },
        {
          "type": "range",
          "id": "text_margin_left",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Left",
          "default": 0
        },
        {
          "type": "range",
          "id": "text_margin_right",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Right",
          "default": 0
        },
        {
          "type": "header",
          "content": "Colors"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#000000"
        }
      ]
    },
    {
      "type": "parallax",
      "name": "Parallax hero",
      "settings": [
        {
          "type": "header",
          "content": "Layout"
        },
        {
          "type": "range",
          "id": "viewport_height",
          "min": 30,
          "max": 100,
          "step": 5,
          "unit": "vh",
          "label": "Height",
          "default": 70
        },
        {
          "type": "header",
          "content": "Background"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background image"
        },
        {
          "type": "select",
          "id": "bg_position_mobile",
          "label": "Image position mobile",
          "options": [
            {
              "value": "left top",
              "label": "Top left"
            },
            {
              "value": "center top",
              "label": "Top center"
            },
            {
              "value": "right top",
              "label": "Top right"
            },
            {
              "value": "left center",
              "label": "Center left"
            },
            {
              "value": "center center",
              "label": "Center"
            },
            {
              "value": "right center",
              "label": "Center right"
            },
            {
              "value": "left bottom",
              "label": "Bottom left"
            },
            {
              "value": "center bottom",
              "label": "Bottom center"
            },
            {
              "value": "right bottom",
              "label": "Bottom right"
            }
          ],
          "default": "center center"
        },
        {
          "type": "select",
          "id": "bg_position_desktop",
          "label": "Image position desktop",
          "options": [
