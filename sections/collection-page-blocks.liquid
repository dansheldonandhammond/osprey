{% for block in section.blocks %}
  {% case block.type %}
    {% when 'hero_row' %}
      <!-- Hero Row Section Block -->
      <div class="t-flex t-flex-col {% if block.settings.row_reverse %} lg:t-flex-row-reverse {% else %} lg:t-flex-row {% endif %} t-w-full t-gap-0 lg:t-max-h-[467px] lg:t-h-full t-mb-[40px] t-max-w-[1300px] t-mx-auto">
        <div class="lg:t-w-1/2">
          <img
            class="t-w-full t-h-full t-object-cover"
            src="{{ block.settings.hero_image | img_url: 'master' }}"
            alt="{{ block.settings.hero_image.alt | default: 'Product Image' }}"
          >
        </div>
        <div
          class="t-h-[300px] lg:t-h-full lg:t-max-h-[467px] lg:t-w-1/2 t-w-full t-flex t-flex-col t-justify-center t-items-center t-text-center t-mx-auto t-overflow-hidden"
          style="background-color: {{ block.settings.hero_bg_color }};"
        >
          <div class="t-z-[1] t-flex t-flex-col t-items-center t-gap-3 t-px-4">
            {% if block.settings.hero_subtitle != blank %}
              <p
                class="t-text-[16px] lg:t-text-[19px] t-tracking-[3.2px] t-uppercase t-mt-0 t-mb-[4px]"
                style="color: {{ block.settings.hero_text_color }};"
              >
                {{ block.settings.hero_subtitle }}
              </p>
            {% endif %}
            {% if block.settings.hero_title_part1 != blank or block.settings.hero_title_part2 != blank %}
              <h2
                class="t-text-[30px] lg:t-text-[46px] t-my-0 t-font-[700]"
                style="color: {{ block.settings.hero_text_color }};"
              >
                {% if block.settings.hero_title_part1 != blank %}
                  {{ block.settings.hero_title_part1 -}}
                  {% if block.settings.hero_title_sup1 != blank -%}
                    <sup class="t-text-[13.8px]">{{ block.settings.hero_title_sup1 }}</sup>
                  {%- endif %}
                {% endif %}
                {% if block.settings.hero_title_part1 != blank and block.settings.hero_title_part2 != blank %}
                  |
                {% endif %}
                {% if block.settings.hero_title_part2 != blank %}
                  {{ block.settings.hero_title_part2 -}}
                  {% if block.settings.hero_title_sup2 != blank -%}
                    <sup class="t-text-[13.8px]">{{ block.settings.hero_title_sup2 }}</sup>
                  {%- endif %}
                {% endif %}
              </h2>
            {% endif %}
            {% if block.settings.hero_description != blank %}
              <p
                class="t-mt-0 t-max-w-[80%] lg:t-max-w-[380px] t-leading-[26px]"
                style="color: {{ block.settings.hero_text_color }};"
              >
                {{ block.settings.hero_description }}
              </p>
            {% endif %}
            {% if block.settings.hero_button_text != blank %}
              <a
                class="t-py-[18px] t-px-[32px] t-no-underline t-ease-in-out t-duration-[0.3s] t-font-[700]"
                style="color: {{ block.settings.hero_button_text_color }}; background-color: {{ block.settings.hero_button_bg_color }};"
                href="{{ block.settings.hero_button_url }}"
              >
                {{- block.settings.hero_button_text -}}
              </a>
            {% endif %}
          </div>
        </div>
      </div>

    {% when 'technology_header' %}
      <!-- Technology Header Block -->
      <div class="t-w-full t-text-center t-my-[40px] t-px-[20px]">
        {% if block.settings.tech_subtitle != blank %}
          <h2
            class="t-font-[400] t-uppercase t-text-[25px] lg:t-text-[28px] t-mt-0"
            style="color: {{ block.settings.header_text_color }};"
          >
            {{ block.settings.tech_subtitle }}
          </h2>
        {% endif %}
        {% if block.settings.tech_main_title != blank %}
          <h3
            class="t-font-[700] lg:t-text-[48px] t-text-[25px] t-mb-0 t-mt-[10px]"
            style="color: {{ block.settings.header_text_color }};"
          >
            {{ block.settings.tech_main_title }}
          </h3>
        {% endif %}
      </div>

    {% when 'technology_cards' %}
      <!-- Technology Cards Section Block -->
      <div
        class="lg:t-flex t-gap-[20px] t-justify-center lg:t-py-[60px]"
        style="{% if block.settings.tech_background_image != blank %}background-image: url('{{ block.settings.tech_background_image | img_url: 'master' }}'); background-size: cover; background-position: center;{% else %}background-color: {{ block.settings.tech_section_bg_color }};{% endif %}"
      >
        {% assign tech_cards = section.blocks | where: 'type', 'technology_card' %}
        {% for card in tech_cards %}
          <div
            class="lg:t-max-w-[393px] t-text-center t-text-white t-py-[40px]"
            style="background-color: {{ card.settings.card_bg_color }};"
          >
            {% if card.settings.tech_name_part1 != blank or card.settings.tech_name_part2 != blank %}
              <h3
                class="t-text-[28px] t-font-[400] t-tracking-[4.2px] t-uppercase t-mt-0"
                style="color: {{ card.settings.card_text_color }};"
              >
                {% if card.settings.tech_name_part1 != blank %}{{ card.settings.tech_name_part1 }}{% endif -%}
                {% if card.settings.tech_name_part2 != blank %}
                  <span class="t-text-[28px] t-font-[700] t-tracking-[4.2px]">
                    {{- card.settings.tech_name_part2 -}}
                    {% if card.settings.tech_name_sup != blank %}
                      <sup class="t-text-[10px] t-font-[300] t-tracking-[1] t-mb-[-20px]">
                        {{- card.settings.tech_name_sup -}}
                      </sup>
                    {% endif %}
                  </span>
                {% endif %}
              </h3>
            {% endif %}
            {% if card.settings.svg_code != blank %}
              <div class="cmsb3971-inline-block">
                {{ card.settings.svg_code }}
              </div>
            {% endif %}
            <div
              class="t-border-solid t-border-t-0 t-border-r-0 t-border-l-0 t-border-b-[1px] t-max-w-[110px] t-mx-auto t-py-[10px] t-mb-[40px] t-mt-[15px]"
              style="border-color: {{ card.settings.card_accent_color }};"
            ></div>

            {% if card.settings.tech_description != blank %}
              <p
                class="t-max-w-[90%] t-mx-auto t-leading-[25px] t-mb-0"
                style="color: {{ card.settings.card_text_color }};"
              >
                {{ card.settings.tech_description }}
              </p>
            {% endif %}
          </div>
        {% endfor %}
      </div>

    {% when 'bluesign_section' %}
      <!-- Bluesign Section Block -->
      <div
        class="t-px-[20px] t-text-center t-flex t-justify-center t-h-[830px] t-flex-col"
        style="{% if block.settings.bluesign_bg_image != blank %}background-image: url('{{ block.settings.bluesign_bg_image | img_url: 'master' }}'); background-size: cover; background-position: center;{% else %}background-color: {{ block.settings.bluesign_section_bg_color }};{% endif %}"
      >
        {% if block.settings.bluesign_logo != blank %}
          <div class="t-mx-auto">
            <img
              class="t-w-[240px]"
              src="{{ block.settings.bluesign_logo | img_url: '240x' }}"
              alt="{{ block.settings.bluesign_logo.alt | default: 'Bluesign Logo' }}"
            >
          </div>
        {% endif %}
        {% if block.settings.bluesign_description != blank %}
          <p
            class="t-max-w-[716px] t-mx-auto t-py-[30px] t-leading-[25px]"
            style="color: {{ block.settings.bluesign_text_color }};"
          >
            {{ block.settings.bluesign_description }}
          </p>
        {% endif %}
        {% if block.settings.bluesign_button_text != blank %}
          <a
            class="t-py-[20px] t-font-[700] t-text-[18px] t-no-underline t-ease-in-out t-duration-[0.3s] t-px-[35px] t-border-[2px] t-border-solid t-w-fit t-mx-auto hover:t-bg-white hover:t-text-black"
            style="color: {{ block.settings.bluesign_button_text_color }}; border-color: {{ block.settings.bluesign_button_border_color }};"
            href="{{ block.settings.bluesign_button_url }}"
          >
            {{- block.settings.bluesign_button_text -}}
          </a>
        {% endif %}
      </div>

    {% when 'parallax_image' %}
      <!-- Parallax Image Section Block -->
      <section
        id="cta-hero"
        class="t-py-20 md:t-py-32 t-bg-cover t-bg-center t-text-center t-text-white t-relative t-h-[660px] t-flex t-items-center"
      >
        <style>
          /* Mobile background (no parallax, most mobile browsers ignore fixed anyway) */
          #cta-hero {
            {% if block.settings.cta_bg_mobile %}
              background-image: url('{{ block.settings.cta_bg_mobile | img_url: '800x' }}');
            {% endif %}
            background-attachment: scroll;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
          }
          /* Desktop background with parallax */
          @media (min-width: 768px) {
            #cta-hero {
              {% if block.settings.cta_bg_desktop %}
                background-image: url('{{ block.settings.cta_bg_desktop | img_url: '1600x' }}');
              {% endif %}
              background-attachment: fixed;
              background-position: center;
              background-size: cover;
            }
          }
        </style>
        <div class="page-width t-mx-auto t-px-4 t-relative">
          {% if block.settings.cta_title %}
            <h3 class="t-text-white t-text-[26px] md:t-text-[36px] t-font-bold t-mb-12 t-tracking-wider t-max-w-[1300px] t-mx-auto t-px-4">
              {{ block.settings.cta_title }}
            </h3>
          {% endif %}
          {% if block.settings.cta_button_text and block.settings.cta_button_url %}
            <a
              href="{{ block.settings.cta_button_url }}"
              class="t-inline-block t-bg-white t-text-black t-px-8 t-py-4 t-font-bold t-tracking-widest hover:t-bg-gray-600 hover:t-text-white t-transition-colors t-duration-300 t-no-underline"
            >
              {{ block.settings.cta_button_text }}
            </a>
          {% endif %}
        </div>
      </section>

    {% when 'two_column_overlap' %}
      <!-- Two Column Overlap Layout Block -->
      <section class="t-py-16 md:t-py-24">
        <div class="page-width t-px-4 t-w-[100vw] t-max-w-[1300px] t-mx-auto">
          <!-- Mobile Content - Shows only on mobile -->
          <div class="t-px-[20px] t-block md:t-hidden t-pb-[20px]">
            {% if block.settings.main_pretitle != blank %}
              <p class="t-max-w-[335px] t-text-[16px] t-font-light t-tracking-wider t-uppercase t-mb-4 t-text-gray-600">
                {{ block.settings.main_pretitle }}
              </p>
            {% endif %}
            {% if block.settings.main_title != blank %}
              <h1 class="t-mt-0 t-mb-[15px] t-text-[28px] t-font-[600] t-leading-tight">
                {{ block.settings.main_title }}
              </h1>
            {% endif %}
            {% if block.settings.main_description != blank %}
              <div class="t-leading-[1.4] t-space-y-4 t-text-gray-700">
                {{ block.settings.main_description }}
              </div>
            {% endif %}
          </div>
          <!-- Main Grid Layout -->
          <div class="t-h-[100vh] xl:t-max-h-[1000px] md:t-max-h-[1400px] lg:t-max-h-[1000px] t-h-auto t-mx-[0] xl:t-mx-[62px] t-px-[20px] t-border-box t-grid md:t-grid-cols-12 md:t-grid-rows-12 t-gap-[20px] t-box-border t-mb-[30px]">
            <!-- Large Portrait Image - Left Side -->
            {% if block.settings.portrait_image != blank %}
              <img
                class="t-row-span-12 t-h-full t-row-start-1 t-col-start-1 md:t-col-end-7 t-col-end-9 t-object-cover t-object-center t-w-full t-h-full lg:t-mt-[50px] t-rounded-lg"
                src="{{ block.settings.portrait_image | img_url: '800x' }}"
                alt="{{ block.settings.portrait_image.alt | default: 'Person hiking in mountains' }}"
                loading="lazy"
              >
            {% else %}
              <div class="t-row-span-12 t-h-full t-row-start-1 t-col-start-1 md:t-col-end-7 t-col-end-9 t-w-full t-h-full lg:t-mt-[50px] t-rounded-lg t-bg-gray-200 t-flex t-items-center t-justify-center">
                <div class="t-text-center t-text-gray-500">
                  <svg class="t-w-16 t-h-16 t-mx-auto t-mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <p class="t-text-sm">Portrait Image</p>
                </div>
              </div>
            {% endif %}
            <!-- Text Content - Top Right (Desktop Only) -->
            <div class="t-hidden md:t-block t-row-span-10 lg:t-row-span-6 t-row-start-1 t-col-start-7 t-col-end-13 xl:t-ms-[40px] t-relative t-h-full">
              {% if block.settings.main_pretitle != blank %}
                <p class="t-max-w-[335px] t-text-sm md:t-text-base t-font-light t-tracking-wider t-uppercase t-mb-4 t-text-gray-600 t-text-[18px] md:t-text-[20px] t-leading-relaxed">
                  {{ block.settings.main_pretitle | newline_to_br }}
                </p>
              {% else %}
                <p class="t-max-w-[335px] t-text-sm md:t-text-base t-font-light t-tracking-wider t-uppercase t-mb-4 t-text-gray-600 t-text-[18px] md:t-text-[20px] t-leading-relaxed">
                  {{ block.settings.pretitle_line1 -}}
                  <br>
                  {{ block.settings.pretitle_line2 }}
                </p>
              {% endif %}
              {% if block.settings.main_title != blank %}
                <h1 class="lg:t-text-[50px] t-mt-0 t-mb-[15px] t-text-[36px] t-font-[600] t-leading-tight">
                  {{ block.settings.main_title }}
                </h1>
              {% endif %}
              {% if block.settings.main_description != blank %}
                <div class="t-leading-[1.4] t-space-y-4 t-text-gray-700">
                  {{ block.settings.main_description }}
                </div>
              {% endif %}
              {% if block.settings.button_text != blank or block.settings.button_link != blank %}
                <div class="t-pt-[30px]">
                  <a
                    class="t-bg-black t-text-white t-py-[20px] t-px-[30px] t-mt-[20px] t-no-underline t-font-[700] hover:t-bg-white hover:t-text-black t-ease-in-out t-duration-[0.3s] t-border-[2px]  hover:t-border-[2px] t-border-solid"
                    href="{{ block.settings.button_link }}"
                  >
                    {{ block.settings.button_text }}
                  </a>
                </div>
              {% endif %}
            </div>
            <!-- Landscape Image - Bottom Right, Overlapping -->
            {% if block.settings.landscape_image != blank %}
              <img
                src="{{ block.settings.landscape_image | img_url: '600x' }}"
                alt="{{ block.settings.landscape_image.alt | default: 'Mountain landscape' }}"
                class="t-mt-[18px] t-w-full t-object-cover t-row-start-9 md:t-row-start-8 lg:t-row-start-8 xl:t-row-start-7 t-row-span-4 lg:t-row-span-5 xl:t-row-span-6 t-col-start-2 lg:t-col-start-5 t-col-end-13 t-mb-[0px] xl:t-mb-[80px] t-rounded-lg t-shadow-lg"
                loading="lazy"
              >
            {% else %}
              <div class="t-mt-[18px] t-w-full t-row-start-9 md:t-row-start-8 lg:t-row-start-8 xl:t-row-start-7 t-row-span-4 lg:t-row-span-5 xl:t-row-span-6 t-col-start-2 lg:t-col-start-5 t-col-end-13 t-mb-[0px] xl:t-mb-[80px] t-rounded-lg t-shadow-lg t-bg-gray-200 t-flex t-items-center t-justify-center">
                <div class="t-text-center t-text-gray-500">
                  <svg class="t-w-12 t-h-12 t-mx-auto t-mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <p class="t-text-sm">Landscape Image</p>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </section>

    {% when 'two_column_info' %}
      <!-- Two Column Image Info Sections Block -->
      {% if block.settings.image_1 or block.settings.image_1 != blank %}
        <div class="t-flex t-flex-col lg:t-flex-row t-w-full t-gap-0">
          {% comment %} Left Column{% endcomment %}
          {% if block.settings.image_1 != blank %}
            <div
              class="t-relative t-flex t-flex-col t-justify-center t-items-center t-text-center t-mx-auto t-w-full  t-overflow-hidden"
              style="background-image: url('{{ block.settings.image_1 | image_url: width: 2000 }}'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 600px; padding: 20px;"
            >
              <!-- Overlay -->
              <div class="t-absolute t-inset-0 t-bg-black t-opacity-40" style="pointer-events: none;"></div>
              <div class="t-relative t-z-[1] t-flex t-flex-col t-items-center t-gap-3 t-px-4">
                {% comment %} Icon  {% endcomment %}
                {% if block.settings.icon_1 != empty %}
                  {{ block.settings.icon_1 }}
                {% endif %}
                {% comment %} Heading {% endcomment %}
                {% if block.settings.heading_1 != blank %}
                  <h2 class="t-text-[32px] md:t-text-[48px] t-leading-tight t-text-white t-my-0">
                    {{ block.settings.heading_1 }}
                  </h2>
                {% else %}

                {% endif %}
                {% comment %} description {% endcomment %}
                {% if block.settings.description_1 != blank %}
                  <p class="t-text-white  t-max-w-[639px]">{{ block.settings.description_1 }}</p>
                {% else %}

                {% endif %}
                {% comment %}  Link {% endcomment %}
                {% if block.settings.link_1 != blank %}
                  <a
                    class="t-ease-in-out t-duration-[0.3s] t-mt-[10px] t-px-[18px] t-py-[12px] t-border t-border-white t-text-white t-bg-transparent hover:t-bg-white/50 t-inline-block t-underline-none t-no-underline t-border-[1px] t-border-solid"
                    href="{{ block.settings.link_1 }}"
                    aria-label="{{ block.settings.link_text_1 }}"
                  >
                    {{ block.settings.link_text_1 }}
                  </a>
                {% else %}

                {% endif %}
              </div>
            </div>
          {% endif %}
          {% comment %} Right Column {% endcomment %}
          {% if block.settings.image_2 != blank %}
            <div
              class="t-relative t-flex t-flex-col t-justify-center t-items-center t-text-center lg:t-my-0 t-mx-auto t-w-full  t-overflow-hidden"
              style="background-image: url('{{ block.settings.image_2 | image_url: width: 2000 }}'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 600px; padding: 20px;"
            >
              {% comment %} Overlay {% endcomment %}
              <div class="t-absolute t-inset-0 t-bg-black t-opacity-40" style="pointer-events: none;"></div>
              {% comment %}  Content {% endcomment %}
              <div class="t-relative t-z-[1] t-flex t-flex-col t-items-center t-gap-3 t-px-4">
                {% comment %} Icon {% endcomment %}
                {% if block.settings.icon_2 != blank %}
                  {{ block.settings.icon_2 | default: '
                  ' }}
                {% endif %}
                {% comment %} Heading {% endcomment %}
                {% if block.settings.heading_2 != blank %}
                  <h2 class="t-text-[32px] md:t-text-[48px] t-leading-tight t-text-white t-my-0">
                    {{ block.settings.heading_2 }}
                  </h2>
                {% else %}

                {% endif %}
                {% comment %} Description {% endcomment %}
                {% if block.settings.description_2 != blank %}
                  <p class="t-text-white  t-max-w-[639px]">{{ block.settings.description_2 }}</p>
                {% else %}

                {% endif %}
                {% comment %}  Link {% endcomment %}
                {% if block.settings.link_2 != blank %}
                  <a
                    class="t-ease-in-out t-duration-[0.3s] t-mt-[10px] t-px-[18px] t-py-[12px] t-border t-border-white t-text-white t-bg-transparent hover:t-bg-white/50 t-inline-block t-underline-none t-no-underline t-border-[1px] t-border-solid "
                    href="{{ block.settings.link_2 }}"
                    aria-label="{{ block.settings.link_text_2 }}"
                  >
                    {{ block.settings.link_text_2 }}
                  </a>
                {% else %}

                {% endif %}
              </div>
            </div>
            </div>
          {% else %}

          {% endif %}
      {% else %}
        <div class="t-flex t-flex-col lg:t-flex-row t-w-full t-gap-0">
          <!-- Left Column -->
          <div
            class="t-relative t-flex t-flex-col t-justify-center t-items-center t-text-center t-mx-auto t-w-full  t-overflow-hidden"
            style="background-color: #a7a7a7ff; height: 400px; padding: 20px;"
          >
            <div class="t-absolute t-inset-0 t-bg-black t-opacity-20" style="pointer-events: none;"></div>
            <div class="t-relative t-z-[1] t-flex t-flex-col t-items-center t-gap-3 t-px-4">
              <h2 class="t-text-[32px] md:t-text-[48px] t-leading-tight t-text-white">Left Column Heading</h2>
              <p class="t-text-white t-max-w-[52ch]">
                Placeholder description for the left column. This block can be updated with your own text in the editor.
              </p>
              <a
                class="t-mt-[10px] t-px-[18px] t-py-[12px] t-border t-border-white t-text-white t-bg-transparent hover:t-bg-white/50 t-inline-block t-border-[1px] t-border-solid"
                href="#"
              >
                Learn More
              </a>
            </div>
          </div>
          <!-- Right Column -->
          <div
            class="t-relative t-flex t-flex-col t-justify-center t-items-center t-text-center lg:t-my-0 t-mx-auto t-w-full t-overflow-hidden"
            style="background-color: #a7a7a7ff; height: 400px; padding: 20px;"
          >
            <div class="t-absolute t-inset-0 t-bg-black t-opacity-20" style="pointer-events: none;"></div>
            <div class="t-relative t-z-[1] t-flex t-flex-col t-items-center t-gap-3 t-px-4">
              <h2 class="t-text-[32px] md:t-text-[48px] t-leading-tight t-text-white">Right Column Heading</h2>
              <p class="t-text-white t-max-w-[52ch]">
                Placeholder description for the right column. Replace this with your content to customize.
              </p>
              <a
                class="t-mt-[10px] t-px-[18px] t-py-[12px] t-border t-border-white t-text-white t-bg-transparent hover:t-bg-white/50 t-inline-block t-border-[1px] t-border-solid"
                href="#"
              >
                Learn More
              </a>
            </div>
          </div>
        </div>
      {% endif %}

    {% when 'modal_video' %}
      <!-- Modal Video Section Block -->
